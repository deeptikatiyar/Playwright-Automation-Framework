{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["DOM", "ESNext"],
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "types": ["node"],   
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src", "tests"]
  }
  